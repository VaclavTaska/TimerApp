<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_timer_running"
        tools:context=".TimerRunning">

    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textViewTime" android:layout_marginTop="75dp"
            app:layout_constraintStart_toStartOf="parent"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-condensed-medium"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            android:textSize="52dp"
            android:textAlignment="center"
            app:layout_constraintTop_toBottomOf="@+id/textViewRounds" app:layout_constraintHorizontal_bias="0.546"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:id="@+id/textViewRounds"
            android:textSize="25dp"
            android:textAlignment="center"
            app:layout_constraintEnd_toEndOf="parent"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-condensed-medium"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="110dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewOverview"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="40dp"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:fontFamily="sans-serif-condensed-medium"
            android:textAppearance="@style/TextAppearance.AppCompat.Display1"
            android:id="@+id/textViewOverview" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="56dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="16dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="16dp"/>
    <Button
            android:paddingLeft="20dp"
            android:drawableStart="@drawable/ic_stop_white_48dp"
            android:layout_width="94dp"
            android:layout_height="134dp"
            android:background="@drawable/buttonframeelips"
            android:id="@+id/buttonStopTime" android:layout_marginTop="96dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTime" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="32dp"
    />
    <Button
            android:paddingLeft="20dp"
            android:drawableStart="@drawable/ic_pause_white_48dp"
            android:layout_width="94dp"
            android:layout_height="134dp"
            android:background="@drawable/buttonframeelips"
            android:id="@+id/buttonPauseTime" android:layout_marginTop="96dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTime"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/buttonStopTime"
            app:layout_constraintStart_toEndOf="@+id/buttonPlayTime" android:layout_marginStart="8dp"/>
    <Button
            android:paddingLeft="20dp"
            android:drawableStart="@drawable/ic_play_arrow_white_48dp"
            android:layout_width="94dp"
            android:layout_height="134dp"
            android:background="@drawable/buttonframeelips"
            android:id="@+id/buttonPlayTime" android:layout_marginTop="96dp"
            app:layout_constraintTop_toBottomOf="@+id/textViewTime"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="48dp"
    />

</android.support.constraint.ConstraintLayout>