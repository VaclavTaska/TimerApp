<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:showIn="@layout/activity_advanced_one"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".AdvancedOneActivity">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:id="@+id/sss" android:orientation="vertical">
        <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:counterMaxLength="10" android:hint="Name your workout"
                app:counterEnabled="true" android:textColorHint="@android:color/white"
        >

            <com.google.android.material.textfield.TextInputEditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text" android:textColor="@android:color/white" android:textSize="24sp"/>
        </com.google.android.material.textfield.TextInputLayout>

        <TextView android:id="@+id/textViewRoundAdvOne"
                  android:textSize="30dp"
                  android:text="Rounds"
                  android:layout_width="match_parent"
                  android:textColor="@android:color/white"
                  android:fontFamily="sans-serif-condensed-medium"
                  android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                  android:layout_height="wrap_content" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                  app:layout_constraintStart_toStartOf="parent" android:textAlignment="center"/>

        <NumberPicker android:layout_height="wrap_content"
                      android:id="@+id/numberPickerRoundsAdvOne"
                      android:layout_marginTop="8dp"
                      android:theme="@style/NumberPickerTheme"
                      app:layout_constraintTop_toBottomOf="@+id/textViewRound"
                      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="160dp"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="160dp"
                      android:layout_width="match_parent"/>

        <TextView android:id="@+id/textViewExercisesAdvOne"
                  android:textSize="30dp"
                  android:text="Exercises"
                  android:layout_width="match_parent"
                  android:textColor="@android:color/white"
                  android:fontFamily="sans-serif-condensed-medium"
                  android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                  android:layout_height="wrap_content" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                  app:layout_constraintStart_toStartOf="parent" android:textAlignment="center"/>

        <NumberPicker android:layout_height="wrap_content"
                      android:id="@+id/numberPickerExercisesAdvOne"
                      android:layout_marginTop="8dp"
                      android:theme="@style/NumberPickerTheme"
                      app:layout_constraintTop_toBottomOf="@+id/textViewRound"
                      app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="160dp"
                      app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="160dp"
                      android:layout_width="match_parent"/>

        <TextView android:id="@+id/textViewBreakAdvOne"
                  android:textSize="30dp"
                  android:text="Break"
                  android:layout_width="match_parent"
                  android:textColor="@android:color/white"
                  android:fontFamily="sans-serif-condensed-medium"
                  android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                  android:layout_height="wrap_content" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                  app:layout_constraintStart_toStartOf="parent" android:textAlignment="center"/>

        <RadioGroup
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
            <RadioButton
                    android:text="After Exercise"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioButton" android:layout_weight="1"
            />
            <RadioButton
                    android:text="After Round"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" android:id="@+id/radioButton2" android:layout_weight="1"/>
        </RadioGroup>
        <TextView android:id="@+id/textViewBreakTimeAdvOne"
                  android:textSize="30dp"
                  android:text="Break Time"
                  android:layout_width="match_parent"
                  android:textColor="@android:color/white"
                  android:fontFamily="sans-serif-condensed-medium"
                  android:textAppearance="@style/TextAppearance.AppCompat.Display1"
                  android:layout_height="wrap_content" android:layout_marginTop="8dp"
                  app:layout_constraintTop_toTopOf="parent" android:layout_marginEnd="8dp"
                  app:layout_constraintEnd_toEndOf="parent" android:layout_marginStart="8dp"
                  app:layout_constraintStart_toStartOf="parent" android:textAlignment="center"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            <NumberPicker android:layout_height="wrap_content"
                          android:id="@+id/numberPickerBreakMinutesAdvOne"
                          android:layout_marginTop="8dp"
                          android:theme="@style/NumberPickerTheme"
                          app:layout_constraintTop_toBottomOf="@+id/textViewRound"
                          app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                          app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="80dp"
                          android:layout_width="wrap_content"/>
            <NumberPicker android:layout_height="wrap_content"
                          android:id="@+id/numberPickerBreakSecondsAdvOne"
                          android:layout_marginTop="8dp"
                          android:theme="@style/NumberPickerTheme"
                          app:layout_constraintTop_toBottomOf="@+id/textViewRound"
                          app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                          app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="80dp"
                          android:layout_width="wrap_content"/>
        </LinearLayout>

    </LinearLayout>
</androidx.core.widget.NestedScrollView>